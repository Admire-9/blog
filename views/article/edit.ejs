<%- include ../header %>

<form class="form" method="post">
    <div class="form-group">
        <input class="form-control" type="text" name="title" id="" placeholder="文章名称" value="<%= title %>">
    </div>
    <div class="form-group">
        <textarea class="form-control" name="content" rows="8" cols="40" placeholder="文章内容"><%= content %>
        </textarea>
    </div>
    <div class="form-group">
        <button class="btn" type="submit" name="button">提交</button>
    </div>
</form>

<%- include ../footer %>
